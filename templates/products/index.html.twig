{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <div class="d-flex justify-content-end">
            <a href="{{ path('products_create') }}" class=" btn btn-primary">Add Product</a>
        </div>
        <br>


        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">PRODUCT ID</th>
                <th scope="col">NAME</th>
                <th scope="col">PRICE</th>
                <th scope="col">FUNCTION</th>
            </tr>
            </thead>
            {% for product in products %}
                <tbody>
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('products_details', {'id': product.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('products_edit', {'id': product.id}) }}" class='btn btn-primary'>Edit</a> 
                        <a href="{{ path('products_delete', {'id': product.id}) }}" class='btn btn-danger'>Delete</a>
                        <a href="{{ path('cart_create', {'id': product.id}) }}" class='btn btn-info'>Add</a>
                    </td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}

