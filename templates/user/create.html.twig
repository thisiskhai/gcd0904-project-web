{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="id">ID:</label>
        {{ form_widget(form.id,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Id'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.id) }}
        </div>
    </div>
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
     <div class="form-group">
        <label for="id">Age:</label>
        {{ form_widget(form.age,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Age'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.age) }}
        </div>
    </div>
    <div>
    <input type="submit" name="create_user" value="Create" class="btn btn-primary"/>
    <a href="{{ path('user_ascending') }}" class="btn btn-danger">Cancel</a>
    </div>
    {{ form_end(form) }}
{% endblock %}